{{- .Scratch.SetInMap "data" "title" .Title }}
{{- .Scratch.SetInMap "data" "kind" .Kind }}
{{- .Scratch.Add "posts" slice }}
{{- range .Paginator.Pages }}
    {{- $.Scratch.Add "posts"
      (dict  
        "title" .Title 
        "uri" .Permalink 
        "tags" .Params.tags 
        "summary" .Summary 
        "date" .Date
        "description" .Description
        "wordCount" .WordCount
      ) 
    }}
{{- end }}
{{- .Scratch.SetInMap "data" "totalPosts" .Paginator.TotalNumberOfElements }}
{{- .Scratch.SetInMap "data" "posts" (.Scratch.Get "posts") }}
{{- .Scratch.Get "data" | jsonify (dict "indent" "  ")}}